<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PetitionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginEnd="8sp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backButton"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_bold"
            android:text="Dahlia Petition"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/logo"
            app:srcCompat="@drawable/logo_icon" />

    </LinearLayout>

    <EditText
        android:id="@+id/PetitionTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="40sp"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:hint="Topic"
        android:inputType="text"
        android:lastBaselineToBottomHeight="30sp" />

    <EditText
        android:id="@+id/PetitionDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="40sp"
        android:ems="10"
        android:fontFamily="@font/poppins_bold"
        android:hint="What is it about?"
        android:inputType="text"
        android:lastBaselineToBottomHeight="200sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="40sp"
        android:fontFamily="@font/poppins_bold"
        android:hint="Upload Photos"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/IVUploadPhoto"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="40sp"
        android:src="@drawable/ic_add"
        android:contextClickable="true"
        android:textAlignment="center"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="40sp"
        android:background="#2F2E2E" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/TVMinSigned"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Minimum Signed : "
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/PetitionMinSigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter an integer"
            android:inputType="number"
            android:maxLines="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/TVDuration"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Date Petition Ends : "
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PetitionEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pick Date End"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:textColorHint="#808080"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/TVType"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Type : "
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <Button
        android:id="@+id/PetitionShareButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:layout_marginTop="10sp"
        android:text="Share Petition" />


</LinearLayout>