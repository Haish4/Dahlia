<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PetitionItemDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16sp">


        <!-- Petition Topic -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/backButton"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_bold"
                android:text="Sign this Petition"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/logo"
                app:srcCompat="@drawable/logo_icon" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPetitionTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Petition Topic"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Petition Details -->
        <TextView
            android:id="@+id/tvPetitionDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detailed description of the petition."
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Petition Image -->
        <ImageView
            android:id="@+id/ivPetitionImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background"
            android:paddingBottom="8dp" />

        <!-- Minimum Signed -->
        <TextView
            android:id="@+id/tvMinimumSigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum Signatures: 100"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Date Ends -->
        <TextView
            android:id="@+id/tvDateEnds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ends On: 12/12/2025"
            android:textSize="16sp"
            android:paddingBottom="8dp" />

        <!-- Petition Type -->
        <TextView
            android:id="@+id/tvPetitionType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type: Educational"
            android:textSize="16sp"
            android:paddingBottom="16dp" />

        <!-- Button to Sign Petition -->
        <Button
            android:id="@+id/btnSignPetition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Petition"
            android:textSize="16sp" />
    </LinearLayout>


</ScrollView>