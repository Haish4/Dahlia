<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@null</item>
    </style>

    <style name="ShadowButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_card</item>
        <item name="cornerRadius">@dimen/_50sdp</item>
        <item name="android:elevation">800dp</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearance</item>
    </style>

    <style name="CustomShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_red</item>
        <item name="android:textColor">"#FFFFFF"</item>
        <item name="android:padding">16dp</item>
        <!-- Add other custom attributes as needed -->
    </style>



</resources>